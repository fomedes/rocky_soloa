---
interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "../components/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="/node_modules/@fortawesome/fontawesome-free/css/all.min.css"
    />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="mx-auto bg-fixed bg-no-repeat bg-center">
    <!-- <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script> -->
    <header class="mx-auto sticky top-0 z-10 px-4 sm:px-8 max-w-6xl">
      <Header />
    </header>
    <main class="mx-auto relative">
      <!-- About Section -->
      <div class="h-auto w-full pt-4 relative">
        <div class="px-4 sm:px-8">
          <div class="absolute inset-0"></div>
          <div class="mx-auto relative">
            <slot name="about-section" />
          </div>
        </div>
      </div>

      <!-- Tokenomics Section -->
      <div class="tockenomics-section w-full relative">
        <div class="absolute inset-0"></div>
        <div class="max-w-screen-xl mx-auto relative">
          <slot name="tockenomics-section" />
        </div>
      </div>

      <!-- Footer Section -->
      <div>
        <div class="max-w-screen-xl mx-auto relative">
          <slot name="footer-section" />
        </div>
      </div>
    </main>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: "Inter Variable", sans-serif;
  }

  body {
    position: relative;
    overflow-x: hidden;
    background-image: url("/images/trinchera_dark.jpg");
    background-size: cover;
    background-position: center;
    background-attachment: fixed; /* Keep background fixed */
  }

  /* Create the overlay with opacity */
  body::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5); /* Apply opacity here */
    z-index: -1; /* Ensure content is on top */
  }

  main {
    color: white;
    font-size: 16px;
    line-height: 1.6;
  }
</style>
