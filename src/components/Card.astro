---
interface Props {
  title: string;
  bottom: string;
  href: string;
  image: string;
}

const { href, title, bottom, image } = Astro.props;
---

<li class="link-card">
  <a href={href} class="flex flex-col justify-between mx-auto text-center">
    <p class="uppercase text-xl font-bold">
      {title}
    </p>
    <!-- Circle Container -->
    <div class="relative w-36 h-36 mx-auto my-4">
      <!-- Circle -->
      <div class="absolute inset-0 bg-teal-300 rounded-full"></div>
      <!-- Image -->
      <img
        src={image}
        alt=""
        class="absolute w-28 h-28 inset-0 object-contain m-auto"
      />
    </div>
    <p class="uppercase text-xl font-bold">
      {bottom}
    </p>
  </a>
</li>
<style>
  .link-card {
    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
</style>
